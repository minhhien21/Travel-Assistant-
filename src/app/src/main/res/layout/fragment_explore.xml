<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ygaps.travelapp.View.MapsActivity">

    <fragment
        android:id="@+id/map_review"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.MapsActivity"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_border"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/explore_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/dlg_addmember_imageView"
            android:background="@null"
            android:hint="Search"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="#000"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/dlg_addmember_imageView"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageButton
        android:id="@+id/explore_list_search"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="83dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/notepad" />

</RelativeLayout>